<% if @active_customers.empty? %>
  <h4>No active customers at this time</h4>
<% else %>
  <%= render :partial => "partials/title_with_search", locals: {title: "Active Customers in GPBO"} %>
  <table class="striped highlight">
    <thead>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th class="align_center">Options</th>
    </thead>
    <% for customer in @active_customers %>
      <tr>
        <td><%= link_to "#{customer.name}", customer_path(customer) %></td>
        <td><%= mail_to customer.email, customer.email, encode: "javascript" %></td>
        <td> <%= number_to_phone customer.phone%></td>
        <td class="align_center">
          <%= link_to edit_customer_path(customer) do %>
              <i class="material-icons">edit</i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
  <br />
<% end %>
<p>&nbsp;</p>
<% if @inactive_customers.empty? %>
  <h4>No inactive customers at this time</h4>
<% else %>
  <%= render :partial => "partials/title_with_search", locals: {title: "Inactive Customers in GPBO"} %>
  <table class="striped highlight">
    <thead>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th class="align_center">Options</th>
    </thead>
    <% for customer in @inactive_customers %>
      <tr>
        <td><%= link_to "#{customer.name}", customer_path(customer) %></td>
        <td><%= mail_to customer.email, customer.email, encode: "javascript" %></td>
        <td> <%= number_to_phone customer.phone%></td>
        <td class="align_center">
          <%= link_to edit_customer_path(customer) do %>
              <i class="material-icons">edit</i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
  <br />
<% end %>

<p><strong>
<%= link_to "Add a New Customer", new_customer_path, class: 'waves-effect waves-light btn' %> 
</strong></p>
