<% if @pending_orders.empty? || !current_user.role?(:admin) %>
<% else %>
  <%= render :partial => "partials/title_with_search", locals: {title: "Pending Orders"} %>
  <table class="striped highlight">
    <thead>
      <th>Customer Name</th>
      <th>Address</th>
      <th>Date</th>
      <th>Products Total</th>
      <th class="align_center">Options</th>
    </thead>
    <% for order in @pending_orders %>
      <tr>
        <td><%= link_to "#{order.customer.proper_name}", customer_path(order.customer) %></td>
        <td><%= link_to "#{order.address.street_1}", address_path(order.address) %>  </td>
        <td><%= order.date %> </td>
        <td> <%= order.products_total%>  </td>
        <td class="align_center">
          <%= link_to edit_order_path(order) do %>
              <i class="material-icons">edit</i>
          <% end %>
          &nbsp;&nbsp;&nbsp;&nbsp; 
          <%= link_to(order_path(order), method: :delete, data: { confirm: 'Are you sure you wish to delete this information?' }) do %>
              <i class="material-icons">delete</i>
          <% end %>
        </td>
      </tr>
    <% end %>
  </table>
  <br />
<% end %>

