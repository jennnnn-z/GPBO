<div class="card">
  <div class="card-content">
    <h5>Address details</h5><br />
    
    <b>Date:</b>
      <%= @order.date.strftime("%B	%d, %Y") %><br /><br />

    <b>Customer:</b>
      <%= @order.customer.proper_name%><br /><br />

    <b>Recipient:</b>
    <%= @order.address.recipient%><br /><br />

    <b>Grand Total:</b>
    <%= number_to_currency @order.grand_total%><br /><br />
  </div>
</div>